<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MenuFragment">

    <fragment
        android:id="@+id/MenuFragment"
        android:name="com.karmaflux.minesweeper.MenuFragment"
        tools:layout="@layout/fragment_menu">

        <action
            android:id="@+id/action_MenuFragment_to_GameFragment"
            app:destination="@id/GameFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/GameFragment"
        android:name="com.karmaflux.minesweeper.GameFragment"
        tools:layout="@layout/fragment_game">

        <argument
            android:name="FieldX"
            app:argType="integer" />
        <argument
            android:name="FieldY"
            app:argType="integer" />
        <action
            android:id="@+id/action_GameFragment_to_WinFragment"
            app:destination="@id/WinFragment"
            app:popUpTo="@id/MenuFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_GameFragment_to_LoseFragment"
            app:destination="@id/LoseFragment"
            app:popUpTo="@id/MenuFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/WinFragment"
        android:name="com.karmaflux.minesweeper.WinFragment"
        android:label="fragment_win"
        tools:layout="@layout/fragment_win" />
    <fragment
        android:id="@+id/LoseFragment"
        android:name="com.karmaflux.minesweeper.LoseFragment"
        android:label="fragment_lose"
        tools:layout="@layout/fragment_lose" />
</navigation>